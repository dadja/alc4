<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:background="@drawable/borderwithbackground"
            android:id="@+id/alc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT ALC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.462"
    />
    <TextView
            android:background="@drawable/textwithbackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO ALC 4.0"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintVertical_bias="0.14" android:id="@+id/textView2"/>
    <Button
            android:background="@drawable/borderwithbackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintVertical_bias="0.624" android:id="@+id/profile"/>

</androidx.constraintlayout.widget.ConstraintLayout>